<Window x:Class="Microsoft.WacVsTools.AttachToWacProcess.AttachToWacProcessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AttachToWacProcessDialog" Height="400" Width="700" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="223*"/>
            <RowDefinition Height="46*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Processes" AutoGenerateColumns="True" ItemsSource="{Binding Processes}"
                  SelectionMode="Extended" SelectionChanged="Processes_SelectionChanged"
                  CanUserAddRows="False" CanUserDeleteRows="False" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Name="btnOk" Click="btnOk_Click" IsDefault="True" Height="25" Width="90">Attach</Button>
            <Button Name="btnCancel" Click="btnCancel_Click" IsCancel="True" Margin="10,0,0,0" Height="25" Width="90">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
